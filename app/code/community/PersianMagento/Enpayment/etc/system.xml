<config>
   <sections>
        <payment>
            <groups>
                <enpayment translate="label comment" module="payment">
                    <label>EnBank Payment Gateway</label>
                    <comment>افزونه بانک اقتصاد نوین ، تهیه شده توسط گروه پرشین مجنتو</comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
						<title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
						<seller_id translate="label comment">
                            <label>Merchant ID</label>
                            <comment>EnBank Merchant Account ID</comment>
                            <frontend_type>text</frontend_type>
                            <backend_model>enpayment/config_backend_sellerid</backend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </seller_id>
                        <transactionmanager_password translate="label comment">
                            <label>Password</label>
                            <comment>Gateway Password from En Bank</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </transactionmanager_password>
                        <order_status translate="label">
                            <label>Order Status(after send request)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                        <sort_order translate="label">                            
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>						
                    </fields>
                </enpayment>
            </groups>
        </payment>
    </sections>
</config>